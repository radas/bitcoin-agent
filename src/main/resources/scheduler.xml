<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


   
	<!--  Agents definitions -->
	<bean id="bitcoinActualTradeAgent" class="cz.kavan.radek.agent.bitcoin.scheduler.impl.BitcoinActualTradeAgent">
		<property name="bitstamp" ref="bitstamp" />
		<property name="tickerDAO" ref="tickerDAO" />
	</bean>


	<!--  Job definitions -->
	<bean id="bitcoinActualTradeAgentJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="bitcoinActualTradeAgent" />
		<property name="targetMethod" value="startAgent" />
	</bean>


	<!--  Scheduler definitions -->
	<bean id="bitcoinTradeTicker" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="bitcoinActualTradeAgentJob" />
		<property name="cronExpression" value="0 */1 * * * ?" />
	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="waitForJobsToCompleteOnShutdown" value="true" />
		<property name="triggers">
			<list>
				<ref bean="bitcoinTradeTicker" />
			</list>
		</property>
	</bean>

</beans>
